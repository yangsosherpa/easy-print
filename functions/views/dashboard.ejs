<%- include('partials/base-partials') %>

<%- include('partials/dashboard-nav-bar') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">

<body>
  <div class="container">
    <h1 class='ep-margin-top-10 title'>
      Welcome <%= vendor.name %>
    </h1>
    <hr>
    <h2>Todays Orders</h2>
    <hr>
    <div>
      <% for (let order in orders) { %>
      <div class="card my-3" style="cursor:pointer" id="card-nav">
        <div class="card-body">
          <h5 class="card-title">
            OrderId: <%= orders[order]._id %>
          </h5>
          <div class="card-text">
            Status: <%= orders[order].status %><br>
            Paid: <%= orders[order].isVerified %><br>
            Drop Point: <%= orders[order].dropPoint %><br>
            Files
            <ul>
              <% orders[order].files.forEach((file) => { %>
              <li><%= file.originalname%></li>
              <% }) %>
            </ul>
            <a href="/vendor/order-detail" type="submit" class="btn btn-primary">Download</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</body>

</html>